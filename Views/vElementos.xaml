<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aburbanoS2A.Views.vElementos"
             Title="vElementos">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        
        <Label x:Name="lblMensaje"
               TextColor="#ED6A5A"
               FontSize="20"/>

        <Label 
            Text="Semana 2 - Elementos GUI"
            FontSize="20"
            TextColor="Blue"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Picker x:Name="pkPaises" Title="Paises">
            <Picker.Items>
            <x:String>Ecuador</x:String>
            <x:String>Peru</x:String>
            <x:String>Colombia</x:String>
            <x:String>Venezuela</x:String>
            </Picker.Items>
        </Picker>

        <Button x:Name="Paises"
                Text="Ver Pais"
                Clicked="Paises_Clicked"
                />

        <DatePicker x:Name="dpfecha" Format="MM/dd/yyyy"/>

        <Button x:Name="btnFecha"
                Text="Ver fecha"
                Clicked="btnFecha_Clicked"/>


    </VerticalStackLayout>
</ContentPage>